{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["lib/*"],
      "@interfaces": ["src/interfaces.ts"],
    }
  },
  "include": [
    "index.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}