{
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@model/*": ["src/model/*"],
      "@interfaces": ["src/interfaces.ts"],
    }
  },
  "include": [
    "index.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}