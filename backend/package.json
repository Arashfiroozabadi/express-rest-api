{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "env-cmd -f ./env/.env.dev nodemon --watch \"dist/**/*\" -e js ./dist/server.js",
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "build": "swc src -d dist",
    "start": "env-cmd -f ./env/.env.production node dist/server.js",
    "formmat": "prettier --write ."
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.2.1",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^4.6.3",
    "yup": "^1.2.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.60",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.3",
    "@types/swagger-ui-express": "^4.1.3",
    "chokidar": "^3.5.3",
    "concurrently": "^8.0.1",
    "env-cmd": "^10.1.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  }
}
